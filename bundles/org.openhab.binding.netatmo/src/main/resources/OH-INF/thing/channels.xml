<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="netatmo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<channel-type id="switch-rw">
		<item-type>Switch</item-type>
		<label>A read write switch</label>
	</channel-type>

	<channel-type id="switch-ro">
		<item-type>Switch</item-type>
		<label>A read write switch</label>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="contact">
		<item-type>Contact</item-type>
		<label>A contact representing on/off or open/closed</label>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="snapshot">
		<item-type>Image</item-type>
		<label>Event Snapshot</label>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="camera-event">
		<kind>trigger</kind>
		<label>Camera Event</label>
		<event>
			<options>
				<option value="ANIMAL"/>
				<option value="HUMAN"/>
				<option value="MOVEMENT"/>
				<option value="VEHICLE"/>
			</options>
		</event>
	</channel-type>

	<channel-type id="string-ro">
		<item-type>String</item-type>
		<label>Read-Only String</label>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="string-rw">
		<item-type>String</item-type>
		<label>Read-Write String</label>
		<state readOnly="false" pattern="%s"/>
	</channel-type>

	<channel-type id="person-count">
		<item-type>Number</item-type>
		<label>Person Count</label>
		<tags>
			<tag>Status</tag>
			<tag>Presence</tag>
		</tags>
		<state readOnly="true" pattern="%d"/>
	</channel-type>

	<channel-type id="rain-qtty">
		<item-type>Number:Length</item-type>
		<label>Rain Quantity</label>
		<category>Rain</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>

	<channel-type id="rain-intensity">
		<item-type>Number:Speed</item-type>
		<label>Rain Intensity</label>
		<category>Rain</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>

	<channel-type id="setpoint-duration">
		<item-type>Number:Time</item-type>
		<label>Setpoint Duration</label>
		<category>time</category>
		<state pattern="%d %unit%" min="5" max="720" step="5"/>
	</channel-type>

	<channel-type id="trend" advanced="true">
		<item-type>String</item-type>
		<label>Trend</label>
		<category>Line</category>
		<state readOnly="true" pattern="%s">
			<options>
				<option value="UP">Up</option>
				<option value="STABLE">Stable</option>
				<option value="DOWN">Down</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="video-status">
		<item-type>String</item-type>
		<label>Video Status</label>
		<state readOnly="true">
			<options>
				<option value="RECORDING"/>
				<option value="DELETED"/>
				<option value="AVAILABLE"/>
			</options>
		</state>
	</channel-type>

	<channel-type id="setpoint">
		<item-type>Number:Temperature</item-type>
		<label>Setpoint</label>
		<category>Temperature</category>
		<state pattern="%.1f %unit%" readOnly="false" min="7" max="30" step="0.5"/>
	</channel-type>

	<channel-type id="th-mode">
		<item-type>String</item-type>
		<label>Thermostat Mode</label>
		<state readOnly="false">
			<options>
				<option value="HOME"/>
				<option value="FROST_GUARD"/>
				<option value="MANUAL"/>
				<option value="MAX"/>
			</options>
		</state>
	</channel-type>

	<channel-type id="energy-mode">
		<item-type>String</item-type>
		<label>Mode house</label>
		<state readOnly="false">
			<options>
				<option value="SCHEDULE"/>
				<option value="AWAY"/>
				<option value="FROST_GUARD"/>
				<option value="MANUAL"/>
			</options>
		</state>
	</channel-type>

	<channel-type id="room-heating-percent">
		<item-type>Number:Dimensionless</item-type>
		<label>Heating Power</label>
		<category>Energy</category>
		<state readOnly="true" pattern="%.0f %unit%"/>
	</channel-type>

	<channel-type id="timestamp">
		<item-type>DateTime</item-type>
		<label>Measurement Time</label>
		<category>time</category>
		<tags>
			<tag>Status</tag>
			<tag>Timestamp</tag>
		</tags>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="co2">
		<item-type>Number:Dimensionless</item-type>
		<label>CO2</label>
		<category>carbondioxide</category>
		<tags>
			<tag>Measurement</tag>
			<tag>CO2</tag>
		</tags>
		<state readOnly="true" pattern="%d %unit%"/>
	</channel-type>

	<channel-type id="noise">
		<item-type>Number:Dimensionless</item-type>
		<label>Noise</label>
		<category>soundvolume</category>
		<tags>
			<tag>Measurement</tag>
			<tag>Noise</tag>
		</tags>
		<state readOnly="true" pattern="%d %unit%"/>
	</channel-type>

	<channel-type id="health-index">
		<item-type>Number</item-type>
		<label>Health Index</label>
		<state readOnly="true" pattern="%d">
			<options>
				<option value="0"/>
				<option value="1"/>
				<option value="2"/>
				<option value="3"/>
				<option value="4"/>
			</options>
		</state>
	</channel-type>

	<channel-type id="humidex">
		<item-type>Number</item-type>
		<label>Humidex</label>
		<state readOnly="true" pattern="%.0f"/>
	</channel-type>

	<channel-type id="humidex-scale">
		<item-type>Number</item-type>
		<label>Humidex Appreciation</label>
		<state readOnly="true" pattern="%d">
			<options>
				<option value="0"/>
				<option value="1"/>
				<option value="2"/>
				<option value="3"/>
				<option value="4"/>
			</options>
		</state>
	</channel-type>

	<channel-type id="event-type">
		<item-type>String</item-type>
		<label>Event Type</label>
		<state readOnly="true">
			<options>
				<option value="PERSON"/>
				<option value="PERSON_AWAY"/>
				<option value="OUTDOOR"/>
				<option value="MOVEMENT"/>
				<option value="NEW_MODULE"/>
				<option value="MODULE_CONNECT"/>
				<option value="MODULE_DISCONNECT"/>
				<option value="MODULE_LOW_BATTERY"/>
				<option value="MODULE_END_UPDATE"/>
				<option value="CONNECTION"/>
				<option value="DISCONNECTION"/>
				<option value="ON"/>
				<option value="OFF"/>
				<option value="BOOT"/>
				<option value="SD"/>
				<option value="ALIM"/>
			</options>
		</state>
	</channel-type>

	<channel-type id="event-subtype">
		<item-type>String</item-type>
		<label>Event Sub Type</label>
		<state readOnly="true">
			<options>
				<option value="MISSING_SD"/>
				<option value="SD_INSERTED"/>
				<option value="SD_FORMATED"/>
				<option value="WORKING_SD"/>
				<option value="DEFECTIVE_SD"/>
				<option value="INCOMPATIBLE_SD_SPEED"/>
				<option value="INSUFFICIENT_SD_SPACE"/>
				<option value="INCORRECT_POWER"/>
				<option value="CORRECT_POWER"/>
				<option value="ARRIVAL"/>
				<option value="HUMAN"/>
				<option value="VEHICLE"/>
				<option value="ANIMAL"/>
			</options>
		</state>
	</channel-type>

	<channel-type id="home-event">
		<kind>trigger</kind>
		<label>Home Event</label>
		<event>
			<options>
				<option value="PERSON"/>
				<option value="PERSON_AWAY"/>
				<option value="OUTDOOR"/>
				<option value="MOVEMENT"/>
				<option value="NEW_MODULE"/>
				<option value="MODULE_CONNECT"/>
				<option value="MODULE_DISCONNECT"/>
				<option value="MODULE_LOW_BATTERY"/>
				<option value="MODULE_END_UPDATE"/>
				<option value="CONNECTION"/>
				<option value="DISCONNECTION"/>
				<option value="ON"/>
				<option value="OFF"/>
				<option value="BOOT"/>
				<option value="SD"/>
				<option value="ALIM"/>
			</options>
		</event>
	</channel-type>

	<channel-type id="rssi" advanced="true">
		<item-type>Number:Power</item-type>
		<label>Signal</label>
		<category>QualityOfService</category>
		<tags>
			<tag>Measurement</tag>
			<tag>Power</tag>
		</tags>
		<state readOnly="true" pattern="%d %unit%"></state>
	</channel-type>

</thing:thing-descriptions>
