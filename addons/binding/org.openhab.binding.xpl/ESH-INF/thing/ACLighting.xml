		<channels>
			<channel id="command" typeId="command" />
			<channel id="level" typeId="dimminglevel" />
			<channel id="lastMessage" typeId="lastMessage" />
		</channels>
		
        <properties>
             <property name="idString1">address</property>
             <property name="idString2">unit</property>
             <property name="schema">ac.basic</property>
