                <label>Primary Unit</label>
                <description>Device Unit. Eg. 10</description>
            </parameter>
                       
            <parameter name="address2" type="text" required="false">
                <label>Secondary Address</label>
            </parameter>
            <parameter name="unit2" type="integer" min="0" max="15" required="false">
                <label>Secondary Unit</label>
            </parameter>
            
            <parameter name="address3" type="text" required="false">
                <label>Other Address</label>
            </parameter>
            <parameter name="unit3" type="integer" min="0" max="15" required="false">
                <label>Other Unit</label>
            </parameter>
                      
            <parameter name="address4" type="text" required="false">
                <label>Other Address</label>
            </parameter>
            <parameter name="unit4" type="integer" min="0" max="15" required="false">
                <label>Other Unit</label>
            </parameter>
            
            <parameter name="address5" type="text" required="false">
